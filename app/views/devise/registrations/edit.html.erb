<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<section id="cover">
<div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white ">
        <div class="col-sm-6 offset-sm-3 text-center">
          <br>
          <h1 class="text-center"> Modifie ton profil </h1>
          <br>
          <div class="info-form">
           <div>
						 <h5 class="text-left">Nouvel email</h5>
             <%= f.email_field :email, autofocus: true,class:"form-control"%>
					
           </div>

           <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
             <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
           <% end %>
             <br>
           <div class="info-form">
						 <div>
             <h5 class="text-left">Nouveau mot de passe</h5>
             <%= f.password_field :password, autocomplete: "new-password", class:"form-control"%>
             <% if @minimum_password_length %>
             
             <% end %>
							 <br>
           </div>
						 </div>

          <div class="info-form">
						<div>
            <h5 class="text-left">Confirmer le mot de passe</h5>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
						</div>
           <br>
          <div class="info-form">
						<div>
            <h5 class="text-left">Mot de passe actuel</h5>
            <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control"%>
          </div>
						</div><br>

          <div class="actions">
            <%= f.submit "Mettre Ã  jour",class:"btn btn-success"%>
          </div>
          <% end %>
<br>
<h3>Supprimer mon compte</h3>

<p > <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back %>
						
